<%= link_to "Home", "/"%>
<%= link_to "Boba Shops", "/boba_shops"%>
<%= link_to "Drinks", "/drinks"%>
<%= link_to "Restaurants", "/restaurants"%>
<%= link_to "Pastas", "/pastas"%>

<br>
<h1>New Drink</h1>
<%= form_with url: "/boba_shops/#{@boba_shop.id}/drinks", method: :post, local: true do |form| %>
  <%= form.label :name %><br>
  <%= form.text_field :name %><br><br>
  <%= form.label :in_stock, "In stock?" %><br>
  <%= form.radio_button :in_stock, true %>
  <%= form.label :true, "Yes" %>
  <%= form.radio_button :in_stock, false %>
  <%= form.label :false, "No" %><br><br/>
  <%= form.label :price %>
  <%= form.number_field :price, in: 5.99..15.99 %><br><br>
  <%= form.submit "Create New Drink" %>
<% end %>