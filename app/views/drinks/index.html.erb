<%= link_to "Home", "/"%>
<%= link_to "Boba Shops", "/boba_shops"%>
<%= link_to "Drinks", "/drinks"%>
<%= link_to "Restaurants", "/restaurants"%>
<%= link_to "Pastas", "/pastas"%>

<h1>All Drinks</h1>

<% @drinks.each do |drink| %>
  <h3><%= link_to drink.name, "/drinks/#{drink.id}" %></h3>
  <%= link_to "Update #{drink.name}", "drinks/#{drink.id}/edit" %>
  <%= link_to "Delete #{drink.name}", "drinks/#{drink.id}", method: :delete %>
  <ul>
    <li>Drink ID: <%= drink.id %></li>
    <li>Store ID: <%= drink.boba_shop_id %></li>
    <li>Created at: <%= drink.created_at %></li>
    <li>Updated at: <%= drink.updated_at %></li>
    <li>In stock: <%= drink.in_stock %></li>
    <li>Price: <%= drink.price %></li>
  </ul>
<% end %>
